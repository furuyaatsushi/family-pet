.form
  %h2 新規登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .form__field
      .field.field__name
        = f.label :名前, class: "user-name"
        = f.text_field :name, autofocus: true, class: "text-field"
      .field.field__email
        = f.label :メールアドレス
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field"
      .field.field__prefecture
        = f.label :都道府県
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
      .field.field__hope
        = f.label :本サイト利用の目的
        = f.select :hope, [["里親希望", "hope"], ["受取手募集", "recruitment"]]
      .field__passward
        = f.label :パスワード
        - if @minimum_password_length
          %em
            (#{@minimum_password_length}文字以上)
        = f.password_field :password, autocomplete: "new-password", class: "password-field"
      .field.field__confirmation
        = f.label :"パスワード(確認)"
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field"
      .field.actions
        = f.submit "新規登録", class: "submit-btn"
      .link-login
        = render "devise/shared/links"
